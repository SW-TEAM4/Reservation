<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.team4.model.mapper.LodgmentMapper">
    <select id="lodgmentDetail" parameterType="kr.co.team4.model.dto.LodgmentDTO" resultType="kr.co.team4.model.dto.LodgmentDTO">
        SELECT L.lod_img_url,
               L.lod_name,
               L.x,
               L.y,
               L.lod_address,
               L.seller_notice,
               L.reservation_notice,
               L.avg_rating
        FROM LODGMENT L
        WHERE L.lod_idx = 3;
    </select>

    <!--lod_idx로 객실 리스트 조회 -->
    <select id="getRoomsByLodgment" parameterType="kr.co.team4.model.dto.RoomDTO" resultType="kr.co.team4.model.dto.RoomDTO">
        SELECT room_idx,
               lod_idx,
               room_name,
               room_notice,
               room_price,
               room_img_url,
               max_people_cnt,
               max_pet_cnt,
               avg_rating,
               number_of_review,
               created,
               updated,
               status
        FROM ROOM
        WHERE lod_idx = #{lod_idx}
    </select>
</mapper>
